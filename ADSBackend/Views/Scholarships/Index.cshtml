@model IEnumerable<Scholarships.Models.Scholarship>

@{
    ViewData["Title"] = "Scholarships";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a asp-controller="Admin" asp-action="Index">Home</a>
    </li>
    <li class="breadcrumb-item active">
        <strong>Scholarships</strong>
    </li>
</ol>

<h2>Scholarships</h2>
<div class="ibox">
    <div class="ibox-content">
        

        <table class="table">
            <thead>
                <tr>
                    <th style="width: 40%">
                       @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReleaseDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DueDate)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="vertical-align: middle">
                            <a asp-controller="Scholarships" asp-action="Details" asp-route-id="@item.ScholarshipId">@Html.DisplayFor(modelItem => item.Name)</a>
                        </td>
                        <td style="vertical-align: middle">
                            @Html.DisplayFor(modelItem => item.ReleaseDate)
                        </td>
                        <td style="vertical-align: middle">
                            @Html.DisplayFor(modelItem => item.DueDate)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
