@model Scholarships.Models.Profile

@{
    ViewData["Title"] = "Edit";
}

<h2>Scholarship Profile</h2>

<div class="row">
    <div class="tabs-container">
        <ul class="nav nav-tabs" role="tablist">
            <li class="active"><a class="nav-link active" data-toggle="tab" href="#tab-1">Basic Profile</a></li>
            <li><a class="nav-link" data-toggle="tab" href="#tab-2">Academic Performance</a></li>
            <li><a class="nav-link" data-toggle="tab" href="#tab-3">College Plans</a></li>
            <li><a class="nav-link" data-toggle="tab" href="#tab-4">Extracurricular Activities</a></li>
            <li><a class="nav-link" data-toggle="tab" href="#tab-5">Family Income</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" id="tab-1" class="tab-pane active">
                <div class="panel-body">
                    <form asp-action="EditProfile" id="EditProfile">
                        <h3>Basic Profile</h3>
                        <fieldset>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ProfileId" />
                            <div class="form-group">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StudentId" class="control-label"></label>
                                <input asp-for="StudentId" class="form-control" />
                                <span asp-validation-for="StudentId" class="text-danger"></span>
                            </div>
                            <div class="form-group" id="dob">
                                <label asp-for="BirthDate" class="control-label"></label>
                                <div class="input-group date">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input name="BirthDate" value="@Model.BirthDate.ToString("MM/dd/yyyy")" class="form-control" />
                                </div>
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Gender" class="control-label"></label>
                                <select asp-for="Gender" asp-items="ViewBag.Genders" class="form-control"></select>
                                <span asp-validation-for="Gender" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address1" class="control-label"></label>
                                <input asp-for="Address1" class="form-control" />
                                <span asp-validation-for="Address1" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address2" class="control-label"></label>
                                <input asp-for="Address2" class="form-control" />
                                <span asp-validation-for="Address2" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="City" class="control-label"></label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <select asp-for="State" asp-items="ViewBag.States" class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="ZipCode" class="control-label"></label>
                                <input asp-for="ZipCode" class="form-control" />
                                <span asp-validation-for="ZipCode" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone" class="control-label"></label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </fieldset>
                    </form>
                    <button type="button" onclick="saveProfile()" class="btn btn-primary btn-lg">Save Basic Profile</button>

                </div>
            </div>
            <div role="tabpanel" id="tab-2" class="tab-pane">
                <div class="panel-body">
                    <form asp-action="EditAcademic">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="ClassRank" class="control-label"></label>
                                <input asp-for="ClassRank" class="form-control" />
                                <span asp-validation-for="ClassRank" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="GPA" class="control-label"></label>
                                <input asp-for="GPA" class="form-control" />
                                <span asp-validation-for="GPA" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SATScoreMath" class="control-label"></label>
                                <input asp-for="SATScoreMath" class="form-control" />
                                <span asp-validation-for="SATScoreMath" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SATScoreReading" class="control-label"></label>
                                <input asp-for="SATScoreReading" class="form-control" />
                                <span asp-validation-for="SATScoreReading" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ACTScore" class="control-label"></label>
                                <input asp-for="ACTScore" class="form-control" />
                                <span asp-validation-for="ACTScore" class="text-danger"></span>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div role="tabpanel" id="tab-3" class="tab-pane">
                <div class="panel-body">
                    <form asp-action="EditCollege">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="CollegeAttending" class="control-label"></label>
                                <input asp-for="CollegeAttending" class="form-control" />
                                <span asp-validation-for="CollegeAttending" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TuitionYearly" class="control-label"></label>
                                <input asp-for="TuitionYearly" class="form-control" />
                                <span asp-validation-for="TuitionYearly" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RoomBoard" class="control-label"></label>
                                <input asp-for="RoomBoard" class="form-control" />
                                <span asp-validation-for="RoomBoard" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TuitionTotal" class="control-label"></label>
                                <input asp-for="TuitionTotal" class="form-control" />
                                <span asp-validation-for="TuitionTotal" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="CollegeAccepted" /> @Html.DisplayNameFor(model => model.CollegeAccepted)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="CollegeIntendedMajor" class="control-label"></label>
                                <input asp-for="CollegeIntendedMajor" class="form-control" />
                                <span asp-validation-for="CollegeIntendedMajor" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LivingSituation" class="control-label"></label>
                                <input asp-for="LivingSituation" class="form-control" />
                                <span asp-validation-for="LivingSituation" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OtherAid" class="control-label"></label>
                                <input asp-for="OtherAid" class="form-control" />
                                <span asp-validation-for="OtherAid" class="text-danger"></span>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div role="tabpanel" id="tab-4" class="tab-pane">
                <div class="panel-body">
                    <form asp-action="EditExtra">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="ActivitiesSchool" class="control-label"></label>
                                <input asp-for="ActivitiesSchool" class="form-control" />
                                <span asp-validation-for="ActivitiesSchool" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ActivitiesCommunity" class="control-label"></label>
                                <input asp-for="ActivitiesCommunity" class="form-control" />
                                <span asp-validation-for="ActivitiesCommunity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SchoolOffices" class="control-label"></label>
                                <input asp-for="SchoolOffices" class="form-control" />
                                <span asp-validation-for="SchoolOffices" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SpecialCircumstances" class="control-label"></label>
                                <input asp-for="SpecialCircumstances" class="form-control" />
                                <span asp-validation-for="SpecialCircumstances" class="text-danger"></span>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div role="tabpanel" id="tab-5" class="tab-pane">
                <div class="panel-body">
                    <form asp-action="EditFamilyIncome">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="FamilyAssets" class="control-label"></label>
                                <input asp-for="FamilyAssets" class="form-control" />
                                <span asp-validation-for="FamilyAssets" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StudentEmployer" class="control-label"></label>
                                <input asp-for="StudentEmployer" class="form-control" />
                                <span asp-validation-for="StudentEmployer" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StudentIncome" class="control-label"></label>
                                <input asp-for="StudentIncome" class="form-control" />
                                <span asp-validation-for="StudentIncome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StudentAssets" class="control-label"></label>
                                <input asp-for="StudentAssets" class="form-control" />
                                <span asp-validation-for="StudentAssets" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Siblings" class="control-label"></label>
                                <input asp-for="Siblings" class="form-control" />
                                <span asp-validation-for="Siblings" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Overview</a>
</div>

@section Styles  {

    <link href="~/lib/inspinia/plugins/datepicker/datepicker3.css" rel="stylesheet" />

    <style type="text/css">
    </style>
}

@section Scripts {

    <script src="~/lib/inspinia/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script type="text/javascript">

        function saveProfile() {
            var post_url = $("#EditProfile").attr("action"); //get form action url
            var form_data = $("#EditProfile").serialize(); //Encode form elements for submission

            $.ajax({
                type: "POST",
                url: post_url,
                data: form_data,
                success: function (response) {
                    
                    if (response.Status === "Success") {
                        swal("Good job!", "Your basic scholarship profile has been saved.  Keep going!", "success")
                            .then((value) => {
                                $('.nav-tabs a[href="#tab-2"]').tab('show')
                            });
                    }
                },
                dataType: "json"
            });
        }

        $(document).ready(function () {

            var mem = $('#dob .input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: true,
                calendarWeeks: true,
                autoclose: true,
                format: "mm/dd/yyyy"
            });

        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
