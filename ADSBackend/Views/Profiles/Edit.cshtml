@model Scholarships.Models.Profile

@{
    ViewData["Title"] = "Edit";
}

<h2>Scholarship Profile</h2>

<div class="row">
    <div class="tabs-container">
        <ul class="nav nav-tabs" role="tablist">
            <li><a class="nav-link active" data-toggle="tab" href="#tab-1">Basic Profile</a></li>
