                                <div class="checkbox">
                                    <label>
                                        <input asp-for="CollegeAccepted" /> @Html.DisplayNameFor(model => model.CollegeAccepted)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="CollegeIntendedMajor" class="control-label"></label>
                                <input asp-for="CollegeIntendedMajor" class="form-control" />
                                <span asp-validation-for="CollegeIntendedMajor" class="text-danger"></span>
