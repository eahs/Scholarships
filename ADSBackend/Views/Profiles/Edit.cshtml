                                <input asp-for="ACTScore" class="form-control" />
                                <span asp-validation-for="ACTScore" class="text-danger"></span>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div role="tabpanel" id="tab-3" class="tab-pane">
