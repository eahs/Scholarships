@model Scholarships.Models.Forms.Question

<div class="form-group">
    <label class="control-label">@Model.Name</label>
    @for (int i = 0; i < Model.Options.Count; i++)
    {
        var option = Model.Options[i];
        if (option.QuestionOptionId == Model.Answer.QuestionOptionId)
        {
            option.Selected = true;
        }
        @if (option.Selected)
        {
            <div>
                Response: @option.Name<br />
            </div>
        }
    }
</div>