@using System.Reflection
@{ 
    var version = "v" + Assembly.GetEntryAssembly().GetCustomAttribute<AssemblyInformationalVersionAttribute>().InformationalVersion;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EAHS Scholarships</title>

    <link rel="stylesheet" href="scholarship-application-css"/>

    @RenderSection("Styles", required: false)
</head>
<body class="md-skin">
    <div id="wrapper">

        @await Html.PartialAsync("_NavbarPartial")

        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top white-bg" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-danger " href="#"><i class="fa fa-bars"></i> </a>
                    </div>
                    @await Html.PartialAsync("_LoginPartial")
                </nav>
            </div>
            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="row" id="page-row">
                    <div class="col-lg-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <div class="footer">
                <div>
                    &copy; <strong>Copyright</strong> @DateTime.Now.Year Easton Area School District -- @version

                </div>
            </div>
        </div>
    </div>

    <!-- Libraries -->
    <script src="scholarship-js-libraries" type="text/javascript"></script>

    <!-- Custom Scripts -->
    <script src="scholarship-js-custom" type="text/javascript"></script>

    <!-- INSPINIA -->
    <script src="scholarship-js-inspinia" type="text/javascript"></script>

    <!--
    <script src="~/lib/metisMenu/dist/jquery.metisMenu.js" asp-append-version="true"></script>
    <script src="~/lib/slimScroll/jquery.slimscroll.js" asp-append-version="true"></script>
    <script src="~/lib/pace/pace.js" asp-append-version="true"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    -->
    @RenderSection("Scripts", required: false)
</body>
</html>
