@model Scholarships.Models.FieldOfStudy

@{
    ViewData["Title"] = "Edit";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a asp-controller="Admin" asp-action="Index">Home</a>
    </li>
    <li class="breadcrumb-item">
        <a asp-controller="FieldsOfStudy" asp-action="Index">Fields Of Study</a> 
    </li>
    <li class="breadcrumb-item active">
        <strong>Edit Field of Study</strong>
    </li>
</ol>

<h2>Edit Field of Study</h2>

<div class="ibox">
    <div class="ibox-title">
        <h4>Edit Field of Study</h4>
    </div>
    <div class="ibox-content">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
