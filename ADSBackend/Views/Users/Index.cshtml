@model List<Scholarships.Models.AdminViewModels.UserViewModel>

@{ ViewData["Title"] = "Admin"; }

<div class="ibox">
    <div class="ibox-title">
        <h2>Manage Users</h2>
        <p>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </p>
    </div>
    <div class="ibox-content" id="users_container" style="display: none">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" style="width:100%" id="users">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model[0].FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].Role)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-white btn-bitbucket"><i class="fa fa-wrench"></i> Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-white btn-bitbucket"><i class="fa fa-info"></i> Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-white btn-bitbucket"><i class="fa fa-trash"></i> Delete</a>
            </td>
        </tr>}
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.20/b-1.6.1/b-html5-1.6.1/b-print-1.6.1/r-2.2.3/datatables.min.css" />

}

@section Scripts {



    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.23/b-1.6.5/b-colvis-1.6.5/b-html5-1.6.5/b-print-1.6.5/r-2.2.7/datatables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {


            var table = $('#users').DataTable(
                {
                    pageLength: 25,
                    responsive: true,
                    order: [[1, "asc"]]
                }
            );

            table.draw();
            $("#users_container").slideDown();

        });
    </script>

}