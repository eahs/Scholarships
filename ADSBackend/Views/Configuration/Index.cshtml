@model Scholarships.Models.ConfigurationViewModels.ConfigurationViewModel

@{
    ViewData["Title"] = "Configuration";
}

@if (Model.ErrorMessage != "")
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}

<div class="ibox">
    <div class="ibox-title">
        <h1>Configuration</h1>
    </div>
    <div class="ibox-content">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2>File Attachment Configuration</h2>
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group">
                        <label asp-for="AttachmentFilePath" class="control-label"></label>
                        <small class="form-text text-muted text-margin-shrink">Root Web Directory: @Model.RootWebPath</small>
                        <input asp-for="AttachmentFilePath" class="form-control" />
                        <span asp-validation-for="AttachmentFilePath" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group">
                        <label asp-for="TranscriptFilePath" class="control-label"></label>
                        <input asp-for="TranscriptFilePath" class="form-control" />
                        <span asp-validation-for="TranscriptFilePath" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group">
                        <label asp-for="StudentDataFilePath" class="control-label"></label>
                        <input asp-for="StudentDataFilePath" class="form-control" />
                        <span asp-validation-for="StudentDataFilePath" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <h2>Application Email Address</h2>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ApplicationEmail" class="control-label"></label>
                        <input asp-for="ApplicationEmail" class="form-control" />
                        <span asp-validation-for="ApplicationEmail" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <h2>Application Email Address Password</h2>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ApplicationEmailPassword" class="control-label"></label>
                        <input asp-for="ApplicationEmailPassword" class="form-control" />
                        <span asp-validation-for="ApplicationEmailPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
